{
  "name": "@code-check/desktop-app",
  "version": "1.0.0",
  "private": true,
  "description": "CodeCheck Desktop Application",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:backend": "cd ../api-backend && npm run build",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on dist/main.js && electron .\"",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist build"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@code-check/core-engine": "workspace:*",
    "@code-check/shared": "workspace:*",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "framer-motion": "^10.18.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.3",
    "recharts": "^3.0.2",
    "socket.io-client": "^4.8.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "ws": "^8.13.0",
    "prisma": "^6.11.1",
    "@prisma/client": "^5.0.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0",
    "dotenv": "^16.3.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.8.0",
    "express-validator": "^7.0.0",
    "express-async-handler": "^1.2.0",
    "electron-updater": "^6.1.7",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "tree-kill": "^1.2.2",
    "get-port": "^7.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/ws": "^8.5.5",
    "@types/uuid": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0",
    "electron-debug": "^3.2.0",
    "electron-devtools-installer": "^4.0.0"
  },
  "build": {
    "appId": "com.codecheck.desktop",
    "productName": "CodeCheck Desktop",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/",
      "assets/",
      "!src/",
      "!tsconfig*.json",
      "!vite.config.ts",
      "!*.md"
    ],
    "extraResources": [
      {
        "from": "../api-backend/dist",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../api-backend/prisma",
        "to": "backend/prisma",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "code-check"
    }
  }
}
