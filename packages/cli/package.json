{
  "name": "@code-check/cli",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "code-check": "./dist/bin.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/bin.ts --format esm --dts",
    "dev": "tsup src/index.ts src/bin.ts --format esm --dts --watch",
    "lint": "eslint 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@code-check/core-engine": "workspace:*",
    "@code-check/shared": "workspace:*",
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "inquirer": "^12.7.0",
    "figlet": "^1.7.0",
    "boxen": "^7.1.1",
    "fs-extra": "^11.1.1",
    "p-limit": "^4.0.0",
    "cli-progress": "^3.12.0",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@types/node": "^20.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/figlet": "^1.5.0",
    "@types/fs-extra": "^11.0.0",
    "@types/cli-progress": "^3.11.0",
    "eslint": "^8.57.0",
    "tsup": "^8.0.0",
    "typescript": "^5.2.0",
    "vitest": "^1.0.0"
  }
}
